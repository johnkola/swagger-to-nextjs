// config/logger.config.json
{
  "level": "info",
  "exitOnError": true,
  "silent": false,
  "handleExceptions": true,
  "handleRejections": true,
  "includeSource": "errors",
  "format": {
    "type": "json",
    "colorize": true,
    "timestamp": true,
    "timestampFormat": "ISO",
    "useEmoji": false,
    "emojis": {
      "error": "‚ùå",
      "warn": "‚ö†Ô∏è",
      "info": "‚ÑπÔ∏è",
      "debug": "üîç",
      "verbose": "üìù",
      "silly": "ü§™"
    },
    "levelLabels": {
      "error": "ERROR",
      "warn": "WARN",
      "info": "INFO",
      "debug": "DEBUG",
      "verbose": "VERBOSE",
      "silly": "SILLY"
    }
  },
  "transports": [
    {
      "type": "console",
      "level": "info",
      "colorize": true,
      "stderrLevels": ["error"],
      "consoleWarnLevels": ["warn"]
    },
    {
      "type": "file",
      "filename": "logs/app.log",
      "level": "info",
      "maxSize": 10485760,
      "maxFiles": 5,
      "tailable": true
    },
    {
      "type": "file",
      "filename": "logs/error.log",
      "level": "error",
      "maxSize": 10485760,
      "maxFiles": 5
    }
  ],
  "defaultMeta": {
    "service": "my-app",
    "version": "1.0.0"
  }
}